<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:surface_type="surface_view" />

    <!-- Zoom Container -->
    <RelativeLayout
        android:id="@+id/zoomContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:padding="4dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/zoomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Play Image Overlay -->
    <ImageView
        android:id="@+id/playImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_media_play"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Continue Text -->
    <TextView
        android:id="@+id/continueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue from 0:00?"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:background="#00000000"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Centered Playback Controls -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/rewindButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back_10"
            android:layout_marginRight="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Rewind 10s"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play/Pause"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/forwardButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/forward_10s"
            android:layout_marginLeft="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Forward 10s"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Top Controls (Video Title) -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/videoTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Video Title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="#80000000">

        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/lefttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="4dp" />

            <SeekBar
                android:id="@+id/videoSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:thumb="@drawable/custom_seekbar_thumb"
                android:progressTint="#FF0000"
                android:backgroundTint="#80FFFFFF"
                android:thumbTint="#FF0000"
                android:padding="4dp" />

            <TextView
                android:id="@+id/righttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="4dp"
                android:gravity="end" />
        </LinearLayout>

        <!-- Bottom Buttons (Speed, Lock, Audio & Subtitles) -->
        <!-- Bottom Buttons (Speed, Lock, Aspect Ratio, Audio & Subtitles) -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="4dp"
            android:visibility="gone">

            <!-- Speed Button -->
            <LinearLayout
                android:id="@+id/speedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/playback"
                    android:contentDescription="Speed"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/speedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed (1x)"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Lock Button -->
            <LinearLayout
                android:id="@+id/lockButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/lock_ic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/lock_ic"
                    android:contentDescription="Lock"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/lockText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lock"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Aspect Ratio Button -->
            <LinearLayout
                android:id="@+id/aspectRatioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/aspectRatioIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_crop"
                    android:contentDescription="Aspect Ratio"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/aspectRatioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aspect Ratio"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp" />
            </LinearLayout>

            <!-- Audio & Subtitles Button -->
            <LinearLayout
                android:id="@+id/audioSubtitleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/settings"
                    android:contentDescription="@string/audio_subtitles"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/audioSubtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_subtitles"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:padding="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Skip Direction Text -->
    <TextView
        android:id="@+id/skipDirectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-10s"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:background="#80000000"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:textSize="18sp"
        android:background="#64000000"
        android:padding="4dp"
        android:layout_above="@id/controlsLayout"
        android:layout_centerHorizontal="true"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Seek Time Text -->
    <TextView
        android:id="@+id/seekTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:background="#80000000"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- 2x Speed Text -->
    <TextView
        android:id="@+id/twoxTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@android:color/white"
        android:layout_marginStart="300dp"
        android:textSize="24sp"
        android:background="#00000000"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <!-- Brightness Container -->
    <RelativeLayout
        android:id="@+id/brightnessContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:visibility="gone">
        <com.lukelorusso.verticalseekbar.VerticalSeekBar
            android:id="@+id/BrightnessSeekBar"
            android:layout_width="16dp"
            android:layout_height="280dp"/>

        <TextView
            android:id="@+id/brightnessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@android:color/white"
            android:layout_below="@id/BrightnessSeekBar"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!-- Volume Container -->
    <RelativeLayout
        android:id="@+id/volumeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:visibility="gone">
        <com.lukelorusso.verticalseekbar.VerticalSeekBar
            android:id="@+id/VolumeSeekBar"
            android:layout_width="16dp"
            android:layout_height="280dp"/>
        <TextView
            android:id="@+id/volumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_below="@id/VolumeSeekBar"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <!-- Brightness Overlay -->
    <View
        android:id="@+id/brightnessOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone" />

    <!-- Volume Value Text -->
    <TextView
        android:id="@+id/tvVolumeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/volumeContainer"
        android:visibility="gone" />
</RelativeLayout>