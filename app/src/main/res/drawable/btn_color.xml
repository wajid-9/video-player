<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F"/> <!-- Darker Red when pressed -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#B71C1C"/> <!-- Border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F44336"/> <!-- Normal Red -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#D32F2F"/> <!-- Border -->
        </shape>
    </item>
</selector>
