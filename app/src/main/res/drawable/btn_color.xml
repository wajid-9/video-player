<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1328C5"/> <!-- Darker Red when pressed -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#1139C8"/> <!-- Border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1818C7"/> <!-- Normal Red -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#11161D"/> <!-- Border -->
        </shape>
    </item>
</selector>
